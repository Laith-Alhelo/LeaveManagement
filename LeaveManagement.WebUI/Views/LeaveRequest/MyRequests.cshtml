@model LeaveManagement.WebUI.Models.MyLeaveRequestsViewModel

@{
    ViewData["Title"] = "My Leave Requests";
    @functions {
        string GetStatusClass(string status)
        {
            return status.ToLower() switch
            {
                "approved" => "status-approved",
                "rejected" => "status-rejected",
                "pending" => "status-pending",
                _ => ""
            };
        }
    }
}

<div class="container mt-3">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>My Leave Requests</h3>
        <a asp-action="Create" class="btn btn-primary btn-emaar">
            New Leave Request
        </a>
    </div>

    <form method="get" class="row g-3 mb-3">
        <div class="col-md-4">
            <label class="form-label">Status</label>
            <select name="SelectedStatus"
                    asp-items="Model.StatusOptions"
                    class="form-select">
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Sort By</label>
            <select name="SortOrder"
                    asp-items="Model.SortOptions"
                    class="form-select">
            </select>
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary btn-emaar me-2">Apply</button>
            <a asp-action="MyRequests" class="btn btn-secondary btn-emaar">Reset</a>
        </div>
    </form>

    @if (Model.Requests != null && Model.Requests.Any())
    {
        <div class="table-responsive">
            <table class="table table-emaar table-hover align-middle">
                <thead>
                    <tr>
                        <th>Leave Type</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Requests)
                    {
                        <tr>
                            <td>@item.LeaveTypeName</td>
                            <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                            <td class="@GetStatusClass(item.StatusText)">@item.StatusText</td>
                            <td>
                                @if (item.StatusText.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                                {
                                    <form asp-action="Delete"
                                          asp-controller="LeaveRequest"
                                          asp-route-id="@item.Id"
                                          method="post"
                                          class="d-inline"
                                          asp-antiforgery="true">
                                        <button type="submit"
                                                class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this leave request?');">
                                            Delete
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No leave requests found.</p>
    }


</div>
