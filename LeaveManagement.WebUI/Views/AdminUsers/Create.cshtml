@model LeaveManagement.WebUI.Models.CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
    var roles = ViewBag.AvailableRoles as string[] ?? Array.Empty<string>();
}

<div class="container mt-3">
    <h3>Create New User</h3>
    <hr />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" class="form-select">
                @foreach (var role in roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <small class="form-text text-muted">
                This temporary password will be sent to the user by email.
            </small>
        </div>

        <button type="submit" class="btn btn-emaar">Create User</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
